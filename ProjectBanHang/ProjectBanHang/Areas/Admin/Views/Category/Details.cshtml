@model Myclass.Model.Catelogies

@{
    ViewBag.Title = "Thông tin chi tiếc loại sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2></h2>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">THÔNG TIN CHI TIẾT LOẠI SẢN PHẨM</strong>

                    </div>
                    <div class="col-md-6 text-right">

                        @*<a href="@Url.Action("Delete","Category", new { id = item.Id })" class="btn-sm btn-info"><i class="fa fa-trash"></i></a>*@
                        <a href="@Url.Action("Create","Category")",new { id = Model.Id })" class="btn-sm btn-success"><i class="fa fa-plus"></i> Sửa</a>
                        <a href="@Url.Action("Index","Category")" class="btn-sm btn-danger"><i class="fa fa-trash"></i> Quay lại</a>

                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Slug)</th>
                            <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                            <th>@Html.DisplayNameFor(model => model.Order)</th>
                            <th>@Html.DisplayFor(model => model.MetaDecs)</th>
                            <th>@Html.DisplayFor(model => model.MetaKey)</th>


                        </tr>
                    </thead>
                    <tbody>
                        
                        <tr>
                            <td>@Html.DisplayFor(model => model.Id)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Slug)</td>
                            <td>@Html.DisplayFor(model => model.ParentId)</td>
                            <td>@Html.DisplayFor(model => model.Order)</td>
                            <td>@Html.DisplayFor(model => model.MetaDecs)</td>
                            <td>@Html.DisplayFor(model => model.MetaKey)</td>

                        </tr>
                        
                    </tbody>
                </table>


            </div> <!-- /.card-footer-->
        </div><!-- /.card -->
    </section><!-- /.content -->
</div> <!-- /.content-wrapper -->


