@model Myclass.Model.Catelogies

@{
    ViewBag.Title = "Xác nhận xóa dữ liệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">XÁC NHẬN XÓA DỮ LIỆU</strong>

                        </div>
                        <div class="col-md-6 text-right">

                            @*<a href="@Url.Action("Delete","Category", new { id = item.Id })" class="btn-sm btn-info"><i class="fa fa-trash"></i></a>*@
                            <a href="@Url.Action("Index","Category")" class="btn-sm btn-danger"><i class="fa fa-trash"></i> Quay lại</a>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayFor(model => model.MetaDecs)</th>
                                <th>@Html.DisplayFor(model => model.MetaKey)</th>
                                <th>Xác nhận</th>
                                
                               

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.Id)</td>
                                <td>@Html.DisplayFor(model => model.Name)</td>
                                <td>@Html.DisplayFor(model => model.Slug)</td>
                                <td>@Html.DisplayFor(model => model.ParentId)</td>
                                <td>@Html.DisplayFor(model => model.Order)</td>
                                <td>@Html.DisplayFor(model => model.MetaDecs)</td>
                                <td>@Html.DisplayFor(model => model.MetaKey)</td>

                                <td>
                                    <div class="form-actions no-color">
                                        <button class="btn-sm btn-danger" input type="submit" name="Delete">Xóa[Del] <i class="fa fa-trash"></i></button>
                                    </div>

                                </td>

                            </tr>

                        </tbody>
                    </table>


                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
}

